
@using PagedList;
@using PagedList.Mvc;
@model IPagedList<Customer.ViewModel.customerViewModel>




@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().address1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().address2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().country)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().postcode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().mobile)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().birthdate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().active)
        </th>
       
        <th>
            City
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.address1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.address2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.postcode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.mobile)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.birthdate)
            </td>
            <td>
               @item.active
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.city)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                @Html.ActionLink("Details", "Details", new { id = item.id }) |
                @Html.ActionLink("Delete", "GoToDelete", new { id = item.id })
            </td>

        </tr>

    }
</table>
   
            @Html.PagedListPager(Model, page => Url.Action("Index",
new { page, sortName = ViewBag.CurrentSort }))
        




